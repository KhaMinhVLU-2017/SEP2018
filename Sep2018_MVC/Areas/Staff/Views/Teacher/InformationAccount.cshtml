@using Sep2018_MVC.Models
@model Person
@{
    ViewBag.Title = "InformationAccount";
    Layout = "~/Areas/Staff/Views/Shared/_LayoutAdmin.cshtml";
    User meo = new User();
    meo = TempData["User_Teacher"] as User;
}

