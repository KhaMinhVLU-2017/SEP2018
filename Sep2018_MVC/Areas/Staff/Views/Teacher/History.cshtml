<!------ Include the above in your HEAD tag ---------->
<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-bordered">
                <h1> History </h1>
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Subject</th>
                        <th>Course</th>
                        <th>Class</th>
                        <th>Date</th>
                        <th>Begin Time</th>
                        <th>End Time</th>
                        <th>Lesson</th>
                        <th>Unit Lession</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 0;
                        foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <th>@item.ScheduleDetail.Learning.Subject.SubjectName</th>
                                <th>@item.ScheduleDetail.Schedule.Course.CourseName</th>
                                <th>@item.ScheduleDetail.Schedule.Course.CourseName@item.ScheduleDetail.Learning.Class.ClassName</th>
                                <th>@item.Date</th>
                                <th>@item.BeginTime</th>
                                <th>@item.EndTime</th>
                                <th>@item.Lesson</th>
                                <th>@item.Unit_Lession</th>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

